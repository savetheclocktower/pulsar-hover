{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "lib"],
  "typings": ["src/*.d.ts"],
  "typeRoots": [
    "./types"
  ]
}
